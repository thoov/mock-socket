{
  "extends": "airbnb-base",
  "parser": "typescript-eslint-parser",
  "env": {
    "browser": true,
    "node": true
  },
  "rules": {
    "max-len": ["error", 120],
    "class-methods-use-this": ["error", { "exceptMethods": ["stopPropagation", "stopImmediatePropagation"] }],
    "consistent-return": 0,
    "prefer-rest-params": 0,
    "no-param-reassign": 0,
    "comma-dangle": ["error", "never"],
    "arrow-parens": 0,
    "import/no-extraneous-dependencies": 0, // all deps are resolved with "node-resolve"
    "no-underscore-dangle": ["error", { "allowAfterThis": true }]
  }
}
